<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra detrÃ¡s del contorno -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- Sombra con opacidad -->
            <corners android:radius="16dp"/> <!-- Borde redondeado de la sombra -->
        </shape>
    </item>

    <!-- Contorno redondeado de la imagen -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Color de fondo blanco o transparente -->
            <corners android:radius="16dp"/> <!-- Radio del borde redondeado -->
        </shape>
    </item>
</layer-list>