<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Color cuando se presiona -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF7043" /> <!-- Color normal -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>