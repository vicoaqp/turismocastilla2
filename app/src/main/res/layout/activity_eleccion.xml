<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".Eleccion">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/text_nombre_distrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explora: Aplao"
                android:textSize="26sp"
                android:textColor="#00695C"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- Botón estilo tarjeta con imagen de fondo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/button_historia"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/historiapng"
                    android:text=""
                    android:contentDescription="Historia" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/button_quehacer"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/quehacerpng"
                    android:text=""
                    android:contentDescription="Qué hacer" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/button_hospedaje"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/hospedajepng"
                    android:text=""
                    android:contentDescription="Hospedaje" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/button_gastronomia"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/gastronomiapng"
                    android:text=""
                    android:contentDescription="Gastronomía" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <Button
                    android:id="@+id/button_vinedos"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/vinedos"
                    android:text=""
                    android:contentDescription="Viñedos" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
